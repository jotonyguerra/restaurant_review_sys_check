<!DOCTYPE html>
<html>
<head>
  <title>RestaurantReviews</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div>
  <% if flash[:notice] %>
    <p><%= flash[:notice] %></p>
  <% end %>
  <% if flash[:success] %>
    <p><%= flash[:success] %></p>
  <% end %>
  <% if flash[:errors] %>
    <p><%= flash[:errors] %></p>
  <% end %>
</div>

<%= yield %>

</body>
</html>
